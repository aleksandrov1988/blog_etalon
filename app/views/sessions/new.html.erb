<h1>
  <%= t('sessions.new.title') %>
</h1>
<%= form_tag login_path do %>
<div class="form-group">
  <%= label_tag :login, User.human_attribute_name(:login) %>
  <%= text_field_tag :login, @login, class: 'form-control' %>
</div>
<div class="form-group">
  <%= label_tag :password, User.human_attribute_name(:password) %>
  <%= password_field_tag :password, nil, class: 'form-control' %>
</div>
<div class="actions">
  <%= submit_tag t('sessions.new.submit'), class: 'btn btn-primary' %>
</div>
<% end %>
